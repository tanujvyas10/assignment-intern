<div class="container">
    <div class="modal-body">
        <h3 class="modal-title" id="contactModalTitle" style="text-align:center;">Update the Employee Detail</h5>

        <form  method="POST" action="/users/makeChange/<%=data._id%>?_method=PUT" >
            <div class="form-group">
                <label for="name">First Name</label>
                <input type="text" class="form-control" name="first_name" value="<%=data.first_name%>">
            </div>
            <div class="form-group">
              <label for="name">Last Name</label>
              <input type="text" class="form-control" name="last_name"  value="<%=data.last_name%>" >
          </div>
          <div class="form-group">
            <label for="name">Father's Name</label>
            <input type="text" class="form-control" name="fname"  value="<%=data.father_name%>" >
        </div>
        <div class="form-group">
          <label for="name">Mother's Name</label>
          <input type="text" class="form-control" name="mname"  value="<%=data.mother_name%>" >
      </div>
            <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" name="email"  value="<%=data.email%>">
                </div>
              <!-- </div> -->
              <div class="form-group">
                    <label for="name">Gender</label>
                    <select class="form-control" name="gender"  id="exampleFormControlSelect1">
                      <% if(data.gender=="Male"){%>
                       <option selected>Male</option>
                       <option>Female</option>
                       <option>Other</option>
                      <%}else if(data.gender=="Female"){%>
                      
                       <option>Male</option>
                       <option selected>Female</option>
                       <option>Other</option>
                      <%} else{%>
                       <option>Male</option>
                       <option >Female</option>
                       <option selected>Other</option>
                       <% } %>
                     </select>
                    </select>
                  </div>
                <div class="form-group">
                  <label for="name">address</label>
                  <input type="text" class="form-control" name="address"  value="<%=data.address%>">
              </div>
              <div class="form-group">
                <label for="name">Phone</label>
                <input type="text" class="form-control" name="phone"  value="<%=data.phone%>">
            </div>
            <div class="form-group">
              <label for="name">title</label>
              <input type="text" class="form-control" name="title"  value="<%=data.title%>">
          </div>
          <div class="form-group">
            <label for="name">salary (In Rupees)</label>
            <input type="text" class="form-control" name="salary"  value="<%=data.salary%>">
        </div>

        <div class="form-group">
            <label for="name">Marriage status</label>
            <select class="form-control" name="Marriage_status" selected="<%=data.gender%>" id="exampleFormControlSelect1">
             <% if(data.Marriage_status=="Married"){%>
              <option selected>Married</option>
              <option>Unmarried</option>
              <option>Divorce</option>
             <%}else if(data.Marriage_status=="Unmarried"){%>
             
              <option>Married</option>
              <option selected>Unmarried</option>
              <option>Divorce</option>
             <%} else{%>
              <option >Married</option>
              <option>Unmarried</option>
              <option selected>Divorce</option>
              <% } %>
            </select>
          </div>
                    <div class="modal-footer">
                      <button class="btn btn-primary btn-block">
                         Update
                      </button>
                  </div>
        </form>
